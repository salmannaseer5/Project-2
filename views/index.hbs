{{ log . }}

{{#if comments.length}}
  {{#each comments}}
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          {{ content }}
        </span>
      </div>
      <div class="card-action">
        <a href="/user/{{ author.id }}" class="">{{ author.local.email }}</a>
        <span class="tweet__date">{{ createdAt }}</span>
      </div>
    </div>
  {{/each}}
{{/if}}

{{#if photos}}
<ul class="photos">
    {{#each photos}}
    <div class="card">
        <h5>{{title}}</h5>
        <div class="card-content">
            <img src="/photo/{{this.url}}" class="card-title">{{content}}</img>
        </div>
       
        
    <div class="card">
        <div class="card-content">
        <h4 class="title">Add a comment:</h6>
        <form method="POST" action="/photo/{{id}}?_method=PUT" class="row">
        <p class="input-field inline col s10">
            <label for="content"></label>
            <input type="text" name="content" id="">
        </p>
        <p class="input-field inline col s2">
            <input class="btn" type="submit" value="Post">
        </p>
        </form>
        </div>
    </div>
    </div>


    <div class= "delete-div">
    <a class= "deleteButton" style="text-decoration: none" href="/photo/delete/{{this.id}}">Delete</a>
    </div>
    {{/each}}
</ul>
{{/if}}

